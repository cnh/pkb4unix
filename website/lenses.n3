@prefix fresnel:   <http://www.w3.org/2004/09/fresnel#> .
@prefix sempfres:  <http://www.andonyar.com/rec/2012/sempipe/fresnelextension#> .
@prefix foaf:      <http://xmlns.com/foaf/0.1/> .
@prefix sioctypes: <http://rdfs.org/sioc/types#> .
@prefix sioc:      <http://rdfs.org/sioc/ns#> .
@prefix content:   <http://purl.org/rss/1.0/modules/content/> .
@prefix dcterms:   <http://purl.org/dc/terms/> .
@prefix rdf:       <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs:      <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd:       <http://www.w3.org/2001/XMLSchema#> .
@prefix :          <#> .

:weblogLens a fresnel:Lens ;
    fresnel:purpose fresnel:defaultLens ;
    fresnel:classLensDomain sioctypes:Weblog ;
    fresnel:showProperties ( 
        [ a fresnel:PropertyDescription ;
          fresnel:property sioc:container_of ;
          fresnel:sublens :postLens ]
    ) .

:weblogLabelLens a fresnel:Lens ;
    fresnel:purpose fresnel:labelLens ;
    fresnel:classLensDomain sioctypes:Weblog ;
    fresnel:showProperties ( 
        dcterms:title
    ) .

:postLens a fresnel:Lens ;
    fresnel:purpose fresnel:defaultLens ;
    fresnel:classLensDomain sioc:Post ;
    fresnel:showProperties ( 
        dcterms:creator
        dcterms:created
        content:encoded
    ) .

:postLabelLens a fresnel:Lens ;
    fresnel:purpose fresnel:labelLens ;
    fresnel:classLensDomain sioc:Post ;
    fresnel:showProperties ( 
        dcterms:title
    ) .

:personLabelLens a fresnel:Lens ;
    fresnel:purpose fresnel:labelLens ;
    fresnel:classLensDomain foaf:Person ;
    fresnel:showProperties ( 
        foaf:name
    ) .

:container_ofFomat a fresnel:Format ;
    fresnel:propertyFormatDomain sioc:container_of ;
    fresnel:valueStyle "html:section"^^fresnel:styleClass ;
    fresnel:label fresnel:none .

:encodedFormat a fresnel:Format ;
    fresnel:propertyFormatDomain content:encoded ;
    fresnel:value sempfres:parsedForcefullyAsXML ;
    fresnel:label fresnel:none .

:metapropFormat a fresnel:Format ;
    fresnel:propertyFormatDomain dcterms:created ;
    fresnel:propertyFormatDomain dcterms:creator ;
    fresnel:propertyStyle "meta"^^fresnel:styleClass ;
    fresnel:propertyFormat [ fresnel:contentAfter ", "^^xsd:string ;
                             fresnel:contentLast "."^^xsd:string ] ;
    fresnel:label fresnel:none .

:postFormat a fresnel:Format ;
    fresnel:classFormatDomain sioc:Post ;
    fresnel:resourceStyle "Post"^^fresnel:styleClass ;
    fresnel:label fresnel:none .

